<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4D9FD"
    tools:context=".GernikaVideoFragment">

    <TextView
        android:id="@+id/tituloE"
        android:layout_width="290dp"
        android:layout_height="62dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Cuadro de Gernika"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#61C865"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/descripcionE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.373" />

    <TextView
        android:id="@+id/descripcionE"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="314dp"
        android:text="A continuación, tenéis que ver el video sobre el cuadro de Gernika. Una vez terminado el video, tenéis que pulsar el botón que está debajo de este para poder empezar a hacer el puzzle."
        app:layout_constraintBottom_toTopOf="@+id/buttonJuegoE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonJuegoE"
        android:layout_width="181dp"
        android:layout_height="38dp"
        android:layout_marginBottom="31dp"
        android:backgroundTint="#87B56A"
        android:text="Ir al Juego"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcionE" />

    <VideoView
        android:id="@+id/videoViewE"
        android:layout_width="358dp"
        android:layout_height="197dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonJuegoE"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloE"
        app:layout_constraintVertical_bias="0.834" />

</androidx.constraintlayout.widget.ConstraintLayout>